
<div class="colc-article-sec-main">
  <div class="page-width">
	<div class="colc-article-sec-head">
		<h3 class="em-hm-section-title">Browse other Collections</h3>
		<a href="/collections/all" class="bl-text-arw-link">All products</a>
	</div>
	<div class="colc-article-sec-row">
		{%if collection.metafields.global.rel_col != blank  %}
			{% assign colhandle = collection.metafields.global.rel_col | split: ","%}
		{% endif %}
		{% for block in section.blocks limit: section.blocks.size %}
      {%- assign collection = collections[block.settings.collection] -%}
			{%- assign loop_index = forloop.index | minus: 1 -%}
			{% if colhandle[loop_index] %}
				{%- assign collection = collections[colhandle[loop_index]] -%}
			{% endif %}
			<div class="colc-article-sec-col">
				<div class="colc-article-sec-block">
					<a href="{{collection.url}}"></a>
					<div class="colc-article-sec-img">
						<img class="lazyload" data-src="{{collection.image | img_url: 'original'}}" />
					</div>
					<div class="colc-article-sec-cont">
						<h3>Shop {{collection.title}}</h3>
						<div class="em-hm-fea-art-block-auth">
							<div class="em-hm-fea-art-auth-info">
								<div class="em-hm-fea-art-auth-link"><span class="bl-text-arw-link">Shop</span></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{%endfor%}
	</div>
	<div class="colc-article-sec-bot">
		<a href="/collections/all" class="bl-text-arw-link">All products</a>
	</div>
</div>
</div>

