<div class="em-top-head-sec DesktopHeader">
  
  {% unless template == "page.landing"%}
	<div class="em-ext-top-bar"><p>Free Shipping in the USA and CA over $49</p></div>
  {%endunless%}
	<div class="em-head-top-bar">
		<div class="em-container">
			<div class="em-head-top-bar-row">
			 	<div class="em-head-top-bar-left">
					<div class="em-head-top-bar-logo">
                      <a href="/">
                         {% comment %} <img src="{{section.settings.logo | img_url: "original"}}" /> {% endcomment %}
                         <img src="{{'emotiva@1x.svg' | asset_url}}" />
                      </a>
                        </div><p>Sound as it should be</p>
				</div>
				<div class="em-head-top-bar-middle">
					<form class="search-form search-bar__form" action="{{ routes.search_url }}" method="get" role="search">
        <div class="search-form__input-wrapper">
          <input
            type="text"
            name="q"
            placeholder="{{ 'general.search.placeholder' | t }}"
            role="combobox"
            aria-autocomplete="list"
            aria-owns="predictive-search-results"
            aria-expanded="false"
            aria-label="{{ 'general.search.placeholder' | t }}"
            aria-haspopup="listbox"
            class="search-form__input search-bar__input"
            data-predictive-search-drawer-input
          />
          <input type="hidden" name="options[prefix]" value="last" aria-hidden="true" />
          <div class="predictive-search-wrapper predictive-search-wrapper--drawer" data-predictive-search-mount="drawer"></div>
        </div>

        <button class="search-bar__submit search-form__submit"
          type="submit"
          data-search-form-submit>
          {% include 'icon-search' %}
          <span class="icon__fallback-text">{{ 'general.search.submit' | t }}</span>
        </button>
      </form>
				</div>
				<div class="em-head-top-bar-right">
					<ul class="em-head-top-bar-rt-list">
						<li><a onclick="Smooch.open();" herf="#">Live Chat</a></li>
                      <li><a href="tel:{{settings.number}}">{{settings.number}}</a></li>
						<li><a href="https://emotiva.com/pages/contact-1">Contact</a></li>
					</ul>
				</div>
			</div>
		</div> 
	</div>
	<div class="em-nav-top-bar">
		<div class="em-container">
			<div class="em-nav-top-bar-row">
                <div class="em-nav-top-bar-right">
					<ul class="em-nav-top-bar-rt-list">
                      {%if customer %}
                      <li><a href="/account">Account</a></li>
                      {%else%}
						<li><a href="/account/login">Sign in</a></li>
                      {%endif%}
						<li><a href="/cart" class="em-nav-top-cart">Cart</a></li>
					</ul>
				</div>
				<div class="em-nav-top-bar-left">
					<ul class="em-nav-top-bar-lt-list">	
                  {% for link in linklists[section.settings.main_linklist].links %}
                      {% if link.links != blank %}
                      <li class="em-nav-listing {%if forloop.index==4%}SeriesCustom em-menu-no-list-title em-mega-menu-full-width{%elsif forloop.index==6%}CustomerCustom em-menu-with-list-title em-mega-menu-full-width{%elsif forloop.index== 7%}ReadCustom em-mega-menu-single{%endif%}"><a>{{link.title}}</a>
                        <div class="em-mega-menu-dd-main">
                          {%if forloop.index==4 or forloop.index==6%}
                          <div class="em-mega-menu-dd-main-row">
	<div class="em-mega-menu-dd-main-left">
		<ul class="childlist">
                       {% for childlink in link.links %}
                          {%if childlink.handle == "has-dropdown" %}
                          <li>
                          {%include "admin-menu"%}
	</li>
                          {%else%}
                          {% if childlink.links != blank %}
                            <li><a href="{{childlink.url}}">{{childlink.title}}</a>
                          <ul class="SubChilList">
                            {% for subchildlink in childlink.links %}
                            <li><a href="{{subchildlink.url}}">{{subchildlink.title}}</a></li>
                            {%endfor%}
                              </ul>
                          </li>
                          {%else%}
                        <li {% if childlink.type contains "collection_link" %} {% assign imagepath = childlink.object.handle %} class="hoverworking" data-images="{{ collections[imagepath].image | img_url: "483x191" }}"{%endif%}><a href="{{childlink.url}}">{{childlink.title}}</a></li>
                          {%endif%}
                          {%endif%}
                        {%endfor%}
                        </ul>
	</div>
                            {%if forloop.index==4%}
                             {% assign Gethandle = link.object.url | split: "/" | last %}
				 
	<div class="em-mega-menu-dd-main-right">
    <div class="dd-menu-qz-img-con">
	<img src="{{section.settings.quiz_image| img_url: '500x500'}}" />
	<div class="dd-menu-qz-img-con-upr">
		<div class="dd-menu-qz-img-con-upr-inn">
			<h3>{{section.settings.quiz_heading}}</h3>
			<p>{{section.settings.quiz_subheading}}</p>
		</div>
		<div class="dd-menu-qz-img-con-upr-btn">
			<a href="{{section.settings.quiz_link}}" class="em-bl-back-btn" aria-label="Explore Product">Take a quiz</a>
		</div>
	</div>
</div>
	</div>
                            {%endif%}
</div>
                          {%else%}
                        <ul class="childlist">
                       {% for childlink in link.links %}
                          {%if childlink.handle == "has-dropdown" %}
                          <li>
                          {%include "admin-menu"%}
	</li>
                          {%else%}
                          {% if childlink.links != blank %}
                            <li><a href="{{childlink.url}}">{{childlink.title}}</a>
                          <ul class="SubChilList">
                            {% for subchildlink in childlink.links %}
                            <li><a href="{{subchildlink.url}}">{{subchildlink.title}}</a></li>
                            {%endfor%}
                              </ul>
                          </li>
                          {%else%}
                        <li><a href="{{childlink.url}}">{{childlink.title}}</a></li>
                          {%endif%}
                          {%endif%}
                        {%endfor%}
                        </ul>
                          {%endif%}
                        </div>
                      </li>
                      {%else%}
                  <li><a href="{{link.url}}">{{link.title}}</a></li>
                      {%endif%}
                  {%endfor%}
                  </ul>
                 
				</div>
			</div>
		</div>
	</div>
</div>