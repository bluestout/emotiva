{
        "type": "text",
        "id": "content",
        "label": "Content Heading",
        "default": "Product"
      }
],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [

          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "The Emotiva XPS-1 Phono Preamplifier Tutorials"
          },
          {
            "type": "text",
            "id": "time",
            "label": "Time",
            "default": "10:33"
          },
          {
            "type": "text",
            "id": "video",
            "label": "Video Link",
            "default": "https://www.youtube.com/embed/j8CklKwQW8I"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label":"Image",
            "info": "385 x 217px"
          }
        ]
      },
      {
        "type": "SubHeading",
        "name": "Sub Heading",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
