<div class="em-hm-pro-art-sec">
	<div class="page-width">
		<div class="em-hm-pro-art-inn">
			<div class="em-hm-pro-art-row">
				<div class="em-hm-pro-art-block">
                 {% assign product= all_products[section.settings.featured_product]%}
					<h3 class="em-hm-section-title">{{section.settings.title}}</h3>
                  <a href="{{product.url}}">
					<div class="em-hm-fea-pro-block">
						<div class="em-hm-fea-pro-img">{%if section.settings.pro_img != blank %}<img class="lazyload" data-src="{{section.settings.pro_img | img_url: "original"}}" />{%else%}<img class="lazyload" data-src="{{ product.featured_image.src | img_url: 'original' }}" />{%endif%}</div>
						<h3>{{product.title}}</h3>
						<h4>{{section.settings.short_description}}</h4>
						<p>{{section.settings.description}}</p>
						<div class="em-hm-fea-pro-price-rate">
							<p>{{product.price | money}}</p>
							<div class="em-hm-fea-pro-rating">
                          {% comment %} {{ product.metafields.stamped.badge }} {% endcomment %}
                          <!-- Yopto -->
                      <div class="yotpo bottomLine"
                          data-appkey="C6NTmtWEZTidMNpCtHQIuzOKSuJ2KlCmswsJKKIS"
                          data-domain="{{shop.permanent_domain | escape }}"
                          data-product-id="{{ product.id }}"
                          data-product-models="{{ product.id }}"
                          data-name="{{ product.title | escape }}"
                          data-url="{{ shop.url }}{{ product.url }}"
                          data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
                          data-description="{{ product.description | escape }}"
                          data-bread-crumbs="{% for tag in product.tags %}{{ tag | escape }};{% endfor %}">
                        {%- assign yotpo_offload_content = shop.metafields.yotpo.yotpo_offload_content %}
                        {%- assign time_now = 'now' | date: '%s' %}
                        {%- assign yotpo_live_time = shop.metafields.yotpo.yotpo_live | date: '%s' %}
                        {%- assign diff_seconds_from_live = time_now | minus: yotpo_live_time %}
                        {%- assign yotpo_bottomline_last_updated = product.metafields.yotpo.bottomline_update_time | date: '%s' %}
                        {%- assign diff_seconds_from_last_bottomline_update = time_now | minus: yotpo_bottomline_last_updated %}
                        {%- if yotpo_live_time and diff_seconds_from_live < 86400 or yotpo_bottomline_last_updated and diff_seconds_from_last_bottomline_update < 86400 -%}
                          {%- assign yotpo_bottomline_obsolete = false %}
                        {%- else %}
                          {%- assign yotpo_bottomline_obsolete = true %}
                        {%- endif %}
                        {%- if yotpo_offload_content == 'yes' and yotpo_bottomline_obsolete != true -%}
                          {{ product.metafields.yotpo.bottomline }}
                        {%- endif %}
                      </div>
              </div>
						</div>
					</div>
                  </a>
					<div class="em-hm-pro-art-block-link">
						<a href="{{section.settings.coll_link}}" class="bl-text-arw-link">All Products</a>
					</div>
				</div>
				<div class="em-hm-pro-art-block">
					<h3 class="em-hm-section-title">{{section.settings.title_2}}</h3>
					<div class="em-hm-fea-art-block">
						<a href="{{articles[section.settings.article_1].url}}">
							<div class="em-hm-fea-art-block-img"><img class="lazyload" data-src="{{section.settings.image_1| img_url: 'large'}}" /></div>
							<div class="em-hm-fea-art-block-cont">
								<h5>{{section.settings.blog_1}}</h5>
								<h3>{{articles[section.settings.article_1].title}}</h3>
								<div class="em-hm-fea-art-block-auth">
									<div class="em-hm-fea-art-auth-info">
										<p><img class="lazyload" data-src="{{section.settings.author_1| img_url: 'original'}}" /> {{articles[section.settings.article_1].published_at | time_tag: format: 'date'}}<br />by {{articles[section.settings.article_1].author}}</p>
										<div class="em-hm-fea-art-auth-link"><span class="bl-text-arw-link">Read</span></div>
									</div>
								</div>
							</div>
						</a>
					</div>
					<div class="em-hm-fea-art-block em-hm-fea-art-img-right">
						<a href="{{articles[section.settings.article_2].url}}">
							<div class="em-hm-fea-art-block-img"><img class="lazyload" data-src="{{section.settings.image_2| img_url: 'large'}}" /></div>
							<div class="em-hm-fea-art-block-cont">
								<h5>{{section.settings.blog_2}}</h5>
								<h3>{{articles[section.settings.article_2].title}}</h3>
								<div class="em-hm-fea-art-block-auth">
									<div class="em-hm-fea-art-auth-info">
										<p><img class="lazyload" data-src="{{section.settings.author_2| img_url: 'original'}}" />{{articles[section.settings.article_2].published_at | time_tag: format: 'date'}}<br />by {{articles[section.settings.article_2].author}}</p>
										<div class="em-hm-fea-art-auth-link"><span class="bl-text-arw-link">Read</span></div>
									</div>
								</div>
							</div>
						</a> 
					</div>
					<div class="em-hm-fea-art-block">
						<a href="{{articles[section.settings.article_3].url}}">
							<div class="em-hm-fea-art-block-img"><img class="lazyload" data-src="{{section.settings.image_3| img_url: 'large'}}" /></div>
							<div class="em-hm-fea-art-block-cont">
								<h5>{{section.settings.blog_3}}</h5>
								<h3>{{articles[section.settings.article_3].title}}</h3>
								<div class="em-hm-fea-art-block-auth">
									<div class="em-hm-fea-art-auth-info">
										<p><img class="lazyload" data-src="{{section.settings.author_3| img_url: 'original'}}" />{{articles[section.settings.article_1].published_at | time_tag: format: 'date'}}<br />by {{articles[section.settings.article_3].author}}</p>
										<div class="em-hm-fea-art-auth-link"><span class="bl-text-arw-link">Read</span></div>
									</div>
								</div>
							</div>
						</a>
					</div>
					<div class="em-hm-pro-art-block-link">
						<a href="{{section.settings.link_1}}" class="bl-text-arw-link">All Articles</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
