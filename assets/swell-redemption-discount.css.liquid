.swell-redemption-discount {
    background-image: url({{"swell-redemption-discounts.jpg"|asset_url}});
    background-size: cover;
    background-repeat: no-repeat;
    justify-content: center;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background-position: center;
    color: white;
    width: 100%;
    padding: 2rem 0;
    text-align: center;
}
.swell-redemption-discount-text h1 {
    font-family: Roboto;
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 6px;
}
.swell-redemption-discount-text p {
    text-shadow: 0 0 7px rgba(0, 0, 0, 0.65);
    font-family: Arial;
    margin-bottom: 0;
    color: white;
}
.swell-redemption-discount-text p:nth-last-of-type(1) {
    margin-top: 0.5rem;
}
.swell-redemption-discount-text button {
    margin: 5% 0;
    background-color: #002855;
    border: 0;
    width: 40%;
    padding: 1.5% 0;
    font-family: Lato;
    font-size: 15px;
    font-weight: bold;
    color: white;
}
@media only screen and (max-width: 540px) {
    .swell-redemption-discount-text h1 {
        font-size: 26px;
    }
    .swell-redemption-discount-text p {
        font-size: 15px;
    }
}
