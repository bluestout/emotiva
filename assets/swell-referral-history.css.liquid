.swell-referral-history-container {
	width: 85%;
	color:white !important;
}
.swell-referral-history {
    width: 40%;
    margin: 4% 0;
}
.showing-form {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.swell-referral-history-text {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: center;
    color: white;
}
.swell-referral-history-text h3 {
    font-weight: bold;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    margin-top: 1rem;
    width: 100%;
    font-family: Roboto;
    font-size: 24px;
    font-weight: bold
}
.swell-referral-history-text a {
	text-decoration: underline;
	width: 100%;
    text-align: center;
    font-family: Arial;
    font-size: 18px;
}
.swell-referral-history-text p:last-child {
	    font-size: 15px
    font-weight: 300;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    width: 100%;

}
.history-table {
	width: 100%;
}
.swell-referral-history-table {
	height: 14rem;
	overflow-y: overlay;
	padding: .4rem;
	width: 96%;
  padding-right: 2rem;
  margin-bottom: 2rem;
}
.swell-referral-history-table td {
	border: 0;
	border-bottom: 1px solid #c7bebe;;
	border-left:0 !important;
	font-size: 15px;
    padding: 9px;
        font-family: Arial;
    font-size: 15px;
    text-align: start;
}
.history-table thead {
  font-weight: bold;
}
.swell-referral-history-table tr {
	border: 0 !important;
}
.swell-referral-history-table::-webkit-scrollbar {
  width: 8px;
}
.swell-referral-history-table::-webkit-scrollbar-thumb {
  background: #003e71;
  border-radius: 10px;
}
.swell-referral-history-table::-webkit-scrollbar-track {
  background: #f1f1f1; 
  border-radius: 10px;
}
.swell-referral-history-text h3:nth-of-type(2) {
	    font-family: Roboto;
    font-size: 25px;
    font-weight: bold
    line-height: 1.16;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    border-top: 1px solid #d2c8c8;;
    padding-top: 1.5rem;
    width: 95%;
    margin-bottom: .5rem;
}
@media only screen and (max-width: 1200px) {
	.swell-referral-history {
		width: 80%;
	}
	.swell-referral-history-table {
		width: 90%;
	}
	.swell-referral-history-table td {
		font-size: 20px;
	}
	.swell-referral-history-text h3:nth-of-type(2)  {
		padding-right: 6rem;
        padding-left: 6rem;
	}
	.swell-referral-history-table {
		height: 18.5rem;
    }
}

@media only screen and (max-width: 820px) {
	
	.swell-referral-history-table {
    width: 96%;
	}
	.swell-referral-history-container {
    width: 96%;
    }
}

@media only screen and (max-width: 634px) {
	.swell-referral-history-text h3:nth-of-type(2) {
		 margin-left: 0;
         margin-right: 0
	}
	.swell-referral-history-container p {
		font-size: 15px;
	}
	.swell-referral-history-table td {
		font-size: 15px;
	}
	
   .swell-referral-history-text h3:nth-of-type(2) {
   	    padding-right: 3rem;
      padding-left: 4rem;
   }
   .swell-referral-history-text p:last-child {
   	   width: 100%;
   }
   .swell-referral-history-table {
    width: 100%;
	}
}
@media only screen and (max-width:476px) {
	.swell-referral-history-table td {
		font-size: 12px;
	}
  .swell-referral-history {
    width: 100%;
    margin: 11% 0;
  }
  .swell-referral-history-table {
      height:10rem;
  }
  .swell-referral-history-text h3:nth-of-type(2) {
    padding-left: 0;
    padding-right: 0;
  }
}
@media only screen and (max-width:396px) {
.swell-referral-history-table td {
		font-size: 12px;
	}
}
