.swell-rewards-referral-container {
    background-image: url({{"swell-rewards-referral.jpg"|asset_url}});
    background-size: cover;
    background-repeat: no-repeat;
    justify-content: center;
    display: flex;
    flex-wrap: wrap;
}
.swell-rewards-referral {
    text-align: center;
    margin-top: 6rem;
    margin-bottom: 3rem;
    color: white;
}
.swell-rewards-referral h3 {
    font-family: Roboto;
    font-size: 20px;
    font-weight: bold;
    width: 100%;
}
.swell-rewards-referral h1 {
    text-shadow: 0 0 7px rgba(0, 0, 0, 0.65);
    font-family: Roboto;
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 0;
}
.swell-rewards-referral p {
    text-shadow: 0 0 7px rgba(0, 0, 0, 0.65);
    font-family: Arial;
    font-size: 17px;
    margin: 0 20%;
    line-height: 1.3rem;
    color: white;
}
.swell-rewards-referral button {
    margin: 5% 0;
    background-color: #002855;
    border: 0;
    width: 40%;
    padding: 1.5% 0;
    font-family: Lato;
    font-size: 13px;
    font-weight: bold;
    color: white;
}
.swell-rewards-referral-title {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin-bottom: 0.8rem;
}
@media only screen and (max-width: 560px) {
    .swell-rewards-referral-title h1:nth-of-type(1) {
        width: 100%;
    }
    .swell-rewards-referral-title h1:nth-of-type(2) {
        display: none;
    }
    .swell-rewards-referral-title h1 {
        font-size: 31px;
    }
    .swell-rewards-referral p {
        font-size: 15px;
        margin: 0px 3%;
    }
    .swell-rewards-referral button {
        width: 66%;
        padding: 2.5% 0;
    }
    .swell-rewards-referral {
        margin-top: 4rem;
        margin-bottom: 1rem;
    }
}
