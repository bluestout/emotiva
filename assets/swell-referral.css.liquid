.swell-referral-banner {
	width: 100%;
	height: 18rem;
	background-size: cover;
	background-repeat: no-repeat;
    justify-content: center;
    align-items: center;
    background-position: center;	
    background-image: url({{"swell-refer-banner.jpg" | asset_url}});
}
.swell-referral-container {    
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.swell-referral-title {
	color: white;
    font-family: Roboto;
    font-size: 42px;
    font-weight: bold;
    text-align: center;
  margin-top: 7rem;
}
.swell-referral-text-h1 {
	display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.swell-referral-details-container {
	background-color: #005daa;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
}
.swell-referral-details {
	    margin: 6% 0;
	    width: 42%;
	        display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.swell-referral-text h1 {
	font-family: Roboto;
    font-size: 36px;
    font-weight: bold;
    margin-bottom: .5rem;

}
/*.swell-referral-text {
	display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    text-align: center;
}*/
.swell-referral-text p {
	font-family: Arial;
    font-size: 18px;
    width: 90%;
    border-bottom: .05px solid;
    padding-bottom: 2rem;
    padding-left: 1%;
    padding-right: 1%;
    margin-bottom: 2rem;
}

.swell-referral-mail input[type="text"] {
    font-size: 15px;
    font-size: 15px;
    font-weight: 300;
    letter-spacing: normal;
    color: black;
    background-color: #fbf9f9;
    width: 55%;
    padding-left: 1rem;
}
.swell-referral-mail input[type="submit"] {
    background-color: #003e71;
    color: white;
    font-weight: 600;
    border-radius: 0;
    font-size: 16px;
    width: 20%;
    margin-left: .8rem;
}
.swell-referral-mail input {
    border: 0;
    font-size: small;
    height: 2.5rem;
        border-radius: 2px;
}
.swell-referral-mail label {
	width: 100%;
	margin-bottom: 1rem;
}
.swell-referral-mail {
        width: 100%;
}
.swell-referral-text {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
	text-align: center;
}
.hidden-form {
	display: none ;
}
.showing-form {
	display: flex; ;
	flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.swell-share-container {
	width: 70%;
}
.Share  {
	content: url({{'swell-share.svg' | asset_url }});
}
.Message {
	content: url({{'swell-message.svg' | asset_url }});
}
.Tweet {
	content: url({{'swell-tweet.svg' | asset_url }});
}
.SMS {
	content: url({{'swell-sms.svg' | asset_url }});
}
.swell-share-links-container {
	display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.swell-share-link-div {
	    margin: 0% 1%;
}
.swell-share-link-div i {

}
.swell-share-link-sms {
	display: none;
}
.swell-share-link {
	width: 20%;
	margin: .3rem;
	font-size: 14px;
	height: 2rem;
}
.swell-share-link-text {
	width: 100%;
    margin-top: .5rem;
    font-size: 14px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    font-family: Arial;
    font-size: 15px;
}


.swell-popup-background {
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	width: 100vw;
	top: 0;
	right: 0;
    background-color: rgba(0, 0, 0, 0.93);
	z-index: 3333;
	position: fixed;
}
.swell-popup-body {
	display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 45%;
   /* height: 15rem;*/
    position: relative;
   }
.swell-popup-text {
	width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background-color: white;
        padding: 9% 0%;

}
.swell-popup-close {
	flex-wrap: wrap;
    width: 0%;
    position: absolute;
    top: -18%;
    display: flex;
    justify-content: center;
    right: 50%;
    font-size: 45px;
    color: white;
}
.swell-copy-link-btn {
    width: 30%;
    background-color: #003e71;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    color: white;
    height: 2.5rem;
    margin-bottom: 1rem;
    margin-top: 1rem;
    font-family: Lato;
    font-size: 12px;
    font-weight: bold;
  
}
/*.swell-copy-link {
	margin-bottom: 1rem;
}*/
.swell-copy-link-text {
	margin-bottom: 0;
	color: black;
	font-size: 14px;
    text-align: center;
    font-weight: 600 ;
    margin-top: 1rem;
        padding: 10% 0;
}
.swell-link-code {
	margin-top: 0 !important;
    padding: 0;
    color: black !important;
    cursor: pointer !important;
    background-color: unset !important;
    text-align: center;
    border: unset;
    width: 100%;
    text-align: center;
    font-family: Roboto;
    font-size: 27px;
    font-weight: bold;

}
.swell-popup-text p {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	text-align: center;
	width: 100%;
	font-size: 16px;
    font-weight: 600;
    line-height: normal;
    letter-spacing: normal;
    color: #000000;
    font-size: 17px;
    font-weight: normal;
}
.swell-popup-img {
	content: url({{"swell-popup-copy-link.jpg" | asset_url}});
	background-size: cover;
	background-repeat: no-repeat;
    justify-content: center;
    align-items: center;
    background-position: center;
    width: 100%;
	
}

.swell-thanks h2 {
	color: black;
    text-transform: unset;
    margin-bottom: 0;
   font-family: Roboto;
    font-size: 58px;
    font-weight: bold;
}
.swell-thanks p {
	font-size: 95%;
    color: black;
    font-family: Roboto;
    font-weight: bold;
}



@media only screen and (max-width: 1200px) {
	.swell-referral-mail input[type="submit"] {
		margin-left:unset;
	}
    .swell-share-link-sms {
        display: block;
    }
   .swell-referral-details {
        width: 70%;
   }
   .swell-referral-img {
        width: 100%;
        height: 94rem;

   }
   .swell-referral-mail {
        margin-bottom: 3rem;
   }
    .swell-share-link-div i {
        display: block;
        height: 1rem;
    	margin-left: .8rem;
    }
    .swell-share-link-div {
        margin-top: 4%;
    }
    .swell-share-links-container {
        font-size: 115%;
        justify-content: space-around;
    }
    .swell-referral-text h1 {
    	    text-shadow: 0 0 7px rgba(0, 0, 0, 0.65);
    }
  

    .swell-referral-mail input {
        width: 80% !important;
        margin-top: 1rem;
    }
    .swell-referral-mail label {
        width: 90%;
    }
}
@media only screen and (max-width: 870px) {
    .swell-link-code {
        font-size: 32px;
    }
      .swell-referral-img {
        height: 72rem;
   }
     .swell-popup-body {
        width: 90%;
    }
}
@media only screen and (max-width: 700px) {
    .swell-popup-body {
       flex-direction: column;
       height: unset;
    }
    .swell-popup-close{
        font-size: 28px;
    	top: -13%;
    }
    .swell-popup-img {
        width: 100%;
         background-image: url({{"swell-copylink-popup-web.jpg" | asset_url}});
    } 
    .swell-popup-text  {
        width: 100%;
        padding-bottom: 4rem;
        padding-top: 4rem;  
    }
     .swell-referral-img {
        height: 68rem;
   }
  


   .swell-referral-text-h1 h1{
   		width: 100%;
   }
   .swell-referral-text-h1 h1:nth-of-type(2) {
   		display: none;
   }
   .swell-referral-details {
        width: 100%;
   }
   .swell-referral-history {
   		 width: 100%;
   }
}

@media only screen and (max-width: 550px) {
   
    .swell-referral-text h3 {
        font-size: 25px;
    }
    .swell-referral-text {
        width: 100%;
    }
    .swell-referral-mail span {
        font-size: 15px;
    }
    .swell-referral-img {
        height: 50rem;
   }
 
   .swell-share-link-text {
    font-size: 12px;
   }
   .swell-copy-link-btn {
        width: 56%;
            height: 2rem;
   }
   .swell-popup-text p {
        font-size: 13px;
    }
   .swell-link-code  {
        font-size: 25px;
        padding: unset;
    }
     .swell-referral-details-container {
        padding-right: 1rem;
        padding-left: 1rem;
    }
    .swell-share-link-text {
        padding-left:1rem;
    }
     .swell-popup-body {
        width: 80%;
    }
    .swell-share-container {
    width: 100%;
	}
	.swell-referral-banner {
		background-image: url({{"swell-refer-banner-mob.jpg" | asset_url}});
		height: 16rem;
	}
	.swell-referral-title {
		    font-size: 32px;
	}
	.swell-popup-img{
		height: 11rem;
	}

}
@media only screen and (max-width: 438px) {
  .swell-referral-mail {
  	margin:0;
  }
    .swell-share-link {
        font-size:12px;
    }
    .swell-referral-mail input[type="text"] {
            font-size: 12px;
    }
    .swell-referral-text p {
    	font-size: 15px;
    	    width: 100%;
    }
     .swell-referral-mail input {
    	    width: 100% !important;
    	        height: 2rem;
    }
    .swell-referral-text h1 {
    	font-size: 32px;
    }
  

}

@media only screen and (max-width: 320px) {
    .swell-popup-body {
        width: 88%;
    }
}
