}
.swell-campaign:last-of-type i {
   content:url({{ 'swell-logo.svg' | asset_url }});
   width: 50%;
}
.swell-campaign:nth-of-type(3n+3) {
	background-color: #656565;
}
.swell-campaign:nth-of-type(6n+2) {
	background-color: #002855;
}
.swell-campaign:nth-of-type(6n+1) {
	background-color: #005daa;
}
.swell-campaign:nth-of-type(9) {
	background-color: #f5f5f5;
}
.swell-campaign:nth-of-type(4) {
	background-color:  #002855;
}
.swell-campaign i {
	width: 44px;
	margin-bottom: 1rem;
	
}
.swell-campaign-points {
	position: absolute;
	font-size: 9px;
    color: white;
    font-weight: bold;
    top: 24%;
    right: 33%;
}
.swell-campaign:nth-of-type(1) .swell-campaign-points {
	top: 17%;
    right: 37%;
}
.swell-campaign:nth-of-type(2) .swell-campaign-points {
	top: 24%;
    right: 39%;
}
.swell-campaign:nth-of-type(6) .swell-campaign-points {
	top: 23%;
    right: 39.5%;
}
.swell-campaign:nth-of-type(7) .swell-campaign-points {
	top: 23%;
    right: 37%;
}
.swell-campaign:nth-of-type(8) .swell-campaign-points {
	top: 24%;
    right: 40%;
}
@media only screen and (max-width: 790px) {
	.swell-campaign {
   	 	width: 48%;
   	}
   	.swell-campaign-grid-container h1 {
   		    font-size: 24px;
   	}
   	.swell-campaign-grid-container {
   		margin-top: 4rem;
   	}
}
@media only screen and (max-width: 425px) {
	.swell-campaign-text p {
   	 	font-size: 14px;
   	}
   	.swell-campaign-text h5 {
   		font-size: 16px;
   	}
   	.swell-campaign {
   		height: 9rem;
   	}
}