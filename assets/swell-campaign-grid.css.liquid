.swell-campaign-grid-container {
	display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin-top: 6rem;
    margin-bottom: 2rem;
   
}
.swell-campaign-grid-container h1 {
	text-align: center;
    font-family: Roboto;
    font-size: 35px;
    font-weight: bold;
    color: black;
    width: 100%;
}
.swell-campaign-grid-options {
	 display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;

}
.swell-campaign {
	width: 23.5%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    height: 11rem;
    margin: 1% 0;
}
.swell-campaign-text h5 {
	margin-bottom: 0;
	font-family: Roboto;
    font-size: 18px;
    font-weight: bold;
    color: white;
    text-transform: uppercase;
}
.swell-campaign-text p {
	font-family: Arial;
    font-size: 16px;
    color: white;
}
.swell-campaign-text {
	text-align: center;
	position: relative;
}
#campaign-444496 i {
  content: url({{'swell-create-account.svg' | asset_url }});
}
#campaign-444497 i{
  content: url({{'swell-per-1-spent.svg' | asset_url }});
}
#campaign-444498 i{
  content:url({{ 'swell-birthday-bonus.svg' | asset_url }});
}
#campaign-496631 i{
  content: url({{'swell-review-product.svg' | asset_url }});
}
#campaign-444502  {
  display: none;
}
#campaign-496632 i{
  content:url({{ 'swell-instagram.svg' | asset_url }});
}
#campaign-496633 i {
  content: url({{'swell-facebook.svg' | asset_url }});
}
#campaign-496634 i {
